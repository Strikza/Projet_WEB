{% extends 'main/main_layout.html.twig' %}

{% block title %}Gérer les utilisateurs{% endblock %}

{% block stylesheets_2 %}
    <link rel="stylesheet" href="{{ asset('css/manage_account.css') }}" type="text/css" />
{% endblock %}

{% block content %}
    <h1>Gestion des utilisateurs :</h1>
    <p>
        <table>
            <tr>
                <th>Identifiant</th>
                <th>Mot de passe</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Anniversaire</th>
            </tr>
            {% for user in users %}
                {% dump(user) %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td >{{ user.password }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>
                        {% if user.birth is not null %} {{ user.birth|date("Y/m/d") }} {% endif %}
                    </td>
                    {% if user.isadmin is not same as(1) %}
                    <td>
                        <a href="{{ path('account_delete', {'iduser': user.id}) }}"><input type="button" value="delete"></a>
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </table>
    </p>
{% endblock %}